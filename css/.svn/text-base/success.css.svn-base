body{
	background:#F5F5F5;
	color:#777;
	padding-top:10%;
}

#form-ss p{
	font-size:18px;
	font-weight: bold;
}
#form-ss p span{
	font-size:14px;
	color:indianred;
}
.form-group{
	height:auto!important;
	color:#777!important;
	border:none!important;
	padding:0 16px;
	margin-bottom:0!important;
}

.radio{
	margin-bottom:15px!important;
}
input.form-control{
	border:1px solid #7777!important;
}
.ssr input{
	margin-bottom:6px;
}
.ddr input{
	margin-bottom:6px;
}
#btn-ss{
	margin-left:40%;
}
.model{
	position:absolute;
	width:80%;
	margin:-80% 6%;
	height:auto;
	background:rgba(0,0,0,0.5); 
	filter: progid:DXImageTransform.Microsoft.gradient(startcolorstr=#7F000000,endcolorstr=#7F000000);
	padding:15px;
	display: none;	
}
.bg{
	width:100%;
	margin:0 auto;
	height:auto;
	padding:10px;
	background:#ffffff;
}
.close{
	width:100%;
	height:30px;
	margin-bottom:15px;
}
.close span{
	font-size:30px;
}
.txt{
	width:100%;
	height:auto;
	padding:10px;
	border-bottom:1px dashed #ccc;
	margin-bottom:20px;
}
#btn-g{
	margin-left:60%;
}